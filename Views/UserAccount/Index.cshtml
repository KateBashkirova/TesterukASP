@model IEnumerable<TesterukASP.Models.history>

@{
    ViewBag.Title = "Личный кабинет";
}
@using Microsoft.AspNet.Identity
<h2>Личный кабинет</h2>
<h3>Здравствуйте, @User.Identity.GetUserName()</h3>

<table class="table">
    <tr>
        <th>
            Тест
        </th>
        <th>
            Пройти тест
        </th>
    </tr>

    <tr>
        <td>
            Основы С++
        </td>
        <td>
            <a href="~/Tests/Test1"><input type="button" value="Пройти тест" /></a>
        </td>
    </tr>
    <tr>
        <td>
            Операции и типы данных
        </td>
        <td>
            <a href="/Tests/Test2"><input type="button" value="Пройти тест" /></a>
        </td>
    </tr>
    <tr>
        <td>
            Строки, ссылки, указатели, массивы
        </td>
        <td>
            <a href="~/Tests/Test3"><input type="button" value="Пройти тест" /></a>
        </td>
    </tr>
    <tr>
        <td>
            Особенности C++
        </td>
        <td>
            <a href="~/Tests/Test4"><input type="button" value="Пройти тест" /></a>
        </td>
    </tr>
    <tr>
        <td>
            Язык JavaScript
        </td>
        <td>
            <a href="~/Tests/Test5"><input type="button" value="Пройти тест" /></a>
        </td>
    </tr>
</table>

<h3>Пройденные тесты</h3>
<table class="table">
    <tr>
        <th>
            Тест
        </th>
        <th>
            Лучший результат
        </th>
        <th>
            Максимально возможный балл
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.test.name)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.test.number)
            </td>
        </tr>
    }

</table>
